<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/filter_layout_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/size_15"
    android:paddingTop="@dimen/size_15">

    <TextView
        android:id="@+id/filter_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/filter_tick"
        android:layout_alignTop="@+id/filter_tick"
        android:textColor="@color/light_grey"
        android:textSize="@dimen/textsize_14"
        tools:text="asd" />

    <ImageView
        android:id="@+id/filter_tick"
        android:layout_width="@dimen/size_15"
        android:layout_height="@dimen/size_15"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/filter_adapter_tick"
        android:src="@drawable/ic_not_checked" />
</RelativeLayout>